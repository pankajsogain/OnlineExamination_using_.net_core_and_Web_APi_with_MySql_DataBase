@model OnlineExaminationApps.Models.SimTest
@{
    ViewData["Title"] = "Create Test";
}
<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header text-white" style="background-color:#817398">
                <h5 class="text-uppercase text-center">Create Test</h5>
            </div>
            <div class="card-body">
                <form asp-action="CreateTest">
                    <div class="form-group">
                        <label asp-for="TestName"></label>
                        <input asp-for="TestName" class="form-control" />
                        <span asp-validation-for="TestName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration"></label>
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Percentage"></label>
                        <input asp-for="Percentage" class="form-control" />
                        <span asp-validation-for="Percentage" class="text-danger"></span>
                    </div>                    
                    <input type="submit" value="Create Test" class="btn btn-sm btn-success text-uppercase rounded-0" />
                </form>
            </div>
        </div>
    </div>
</div>  